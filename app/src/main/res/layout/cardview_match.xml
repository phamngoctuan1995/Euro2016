<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:gravity="center_vertical"
            >

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:id="@+id/ln"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/result"
                    android:text="0 - 0"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date"
                    android:text="June 11"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>

            <com.example.phamngoctuan.euro2016.CircleImage
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/team1_thumb"
                android:layout_toLeftOf="@id/ln"
                android:scaleType="centerCrop"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:id="@+id/team1_name"
                android:text="England"
                android:layout_toLeftOf="@id/team1_thumb"
                android:maxLines="2"
                android:textColor="@color/colorPrimaryDark"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:paddingRight="5dp"/>

            <com.example.phamngoctuan.euro2016.CircleImage
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/team2_thumb"
                android:scaleType="centerCrop"
                android:layout_toRightOf="@+id/ln"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/team2_name"
                android:text="France"
                android:layout_gravity="center"
                android:maxLines="2"
                android:textColor="@color/colorPrimaryDark"
                android:layout_toRightOf="@+id/team2_thumb"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:paddingLeft="5dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>