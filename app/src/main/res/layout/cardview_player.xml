<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/cv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            >

            <com.example.phamngoctuan.euro2016.CircleImage
                android:layout_width="106dp"
                android:layout_height="match_parent"
                android:id="@+id/player_thumb"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/player_role"
                android:layout_toRightOf="@+id/player_thumb"
                android:layout_alignParentTop="true"
                android:textSize="15dp"
                android:maxLines="1"
                android:text="GoalKeeper"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/player_number"
                android:layout_below="@+id/player_role"
                android:layout_toRightOf="@+id/player_thumb"
                android:textSize="40dp"
                android:text="1"
                android:maxLines="1"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/player_number"
                android:layout_below="@id/player_role"
                android:id="@+id/player_name"
                android:text="Joe Hard"
                android:textSize="20dp"
                android:lines="2"
                android:layout_marginLeft="5dp"
                android:textColor="#2980B9"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_player"
                android:id="@+id/player_icon_performence"
                android:layout_marginTop="5dp"
                android:layout_below="@id/player_number"
                android:layout_toRightOf="@id/player_thumb"/>
            <ImageView
                android:layout_width="2dp"
                android:layout_height="30dp"
                android:layout_below="@id/player_number"
                android:layout_toRightOf="@id/player_icon_performence"
                android:layout_marginLeft="10dp"
                android:background="#5E5A59"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/player_performence"
                android:layout_below="@id/player_number"
                android:layout_toRightOf="@id/player_icon_performence"
                android:text="Thu nghiem"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textSize="13dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>